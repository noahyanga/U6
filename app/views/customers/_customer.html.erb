<div class="customer-info card">
  <div class="card-content">
    <div class="columns">
      <div class="column is-one-quarter">
        <% if customer.image.attached? %>
          <figure class="image is-128x128">
            <%= image_tag customer.image.variant(resize_to_limit: [128, 128]), class: 'is-rounded' %>
          </figure>
        <% else %>
          <figure class="image is-128x128">
            <img src="https://via.placeholder.com/128" alt="No Image" class="is-rounded">
          </figure>
        <% end %>
      </div>

      <div class="column">
        <h2 class="title is-5 has-text-primary"><%= customer.full_name %></h2>
        <p><strong>Email:</strong> <%= customer.email %></p>
        <p><strong>Phone:</strong> <%= customer.phone_number %></p>
        <p><strong>Notes:</strong> <%= customer.notes.present? ? customer.notes : "No notes available" %></p>
      </div>
    </div>
  </div>
</div>
